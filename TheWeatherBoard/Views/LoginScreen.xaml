<Window x:Class="TheWeatherBoard.Views.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheWeatherBoard.Views"
        xmlns:vm="clr-namespace:TheWeatherBoard.ViewModels"
        mc:Ignorable="d"
        Title="LoginScreen" Height="650" Width="600">
    <Window.DataContext>
        <vm:LoginScreenViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel Margin="100,100,100,245">
            <Label Content="Name:" Height="30" Margin="0,20,0,0" />
            <TextBox Text="Hans Schmidt" Height="30" VerticalContentAlignment="Center" Margin="0,20,0,0"/>
            <Label Content="Password:" Height="30" Margin="0,20,0,0"/>
            <PasswordBox Height="30" Margin="0,20,0,0" VerticalContentAlignment="Center" />
            <Button Content="Login" Width="200" Height="30" Command="{Binding LoginCommand}" Margin="0,20,0,0" />
        </StackPanel>
    </Grid>
</Window>
